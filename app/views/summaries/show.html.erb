<h2>Summary</h2>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Category</th>
      <th>Description</th>
      <th>Start Time</th>
      <th>End Time</th>
      <th>Time Spent</th>
    </tr>
  </thead>
  <tbody>
    <% @records.each do |record| %>
      <% time_spent = record.time_spent %>
      <tr>
        <td> <%= record.is_work ? "Work" : "Relax"  %> </td>
        <td> <%= record.description %> </td>
        <td> <%= record.created_at %> </td>
        <td> <%= record.created_at + time_spent %> </td>
        <td> <%= total_time(time_spent) %> </td>
      </tr>
    <% end %>
  </tbody>

</table>
  
<p>Total Work: <%= total_time(@totalWork) %> </p>
<p>Total Relax: <%= total_time(@totalRelax) %> </p>
