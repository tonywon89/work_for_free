<% provide(:title, "Update Button") %>

<h2>Update Button</h2>

<p> Edit: "<%= @button.description %>" Button  </p>

<hr/>

<%= form_for(:buttons, url: buttons_update_path(button_id: params[:button_id]), method: :patch) do |f| %>

  <div class="form-group">
    <%= f.select :work_relax, [["Work", true], ["Relax", false]], {}, {class: 'form-control input-small'} %>
  </div>

  <div class="form-group">
    <%= f.label :description, "Description" %>
    <%= f.text_field :description, value: @button.description, class: 'form-control' %>
  </div>

  <hr/>

  <%= f.submit "Update Button", class: 'btn btn-success' %>

<% end %>
