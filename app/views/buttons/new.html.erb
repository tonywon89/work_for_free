<h2>Button modification form</h2>

<%= form_for(:buttons, url: buttons_create_path) do |f| %>

  <div class="form-group">
    <%= f.label :work_relax, "Work or Relax Button" %>
    <%= f.select :work_relax, [["Work", true], ["Relax", false]] %>
  </div>

  <div class="form-group">
    <%= f.label :description, "Description" %>
    <%= f.text_field :description, class: 'form-control' %>
  </div>

  <%= f.submit "Create New Button", class: 'btn btn-success' %>

<% end %>