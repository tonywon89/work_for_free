<h2>Create a Button</h2>

<hr/>

<%= form_for(:buttons, url: buttons_create_path) do |f| %>

  <div class="form-group">
    <%= f.select :work_relax, [["Work", true], ["Relax", false]], {}, {class: "form-control input-small"} %>
  </div>

  <div class="form-group">
    <%= f.label :description, "Description" %>
    <%= f.text_field :description, class: 'form-control' %>
  </div>

  <hr/>

  <%= f.submit "Create New Button", class: 'btn btn-success' %>

<% end %>