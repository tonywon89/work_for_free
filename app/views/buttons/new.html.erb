<h2>Create a Button</h2>

<hr/>
<%= content_tag :p, "Description can't be blank", class: "alert alert-danger" if @button%>
<%= form_for(:buttons, url: buttons_path, method: :post) do |f| %>

  <div class="form-group">
    <%= f.select :work_relax, [["Work", true], ["Relax", false]], {}, {class: "form-control input-small"} %>
  </div>

  <div class="form-group">
    <%= f.label :description, "Description" %>
    <%= f.text_field :description, class: 'form-control' %>
  </div>

  <hr/>

  <%= f.submit "Create New Button", class: 'btn btn-success' %>

<% end %>

<%= link_to "Back to buttons", buttons_path %>