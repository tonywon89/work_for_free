<% provide(:title, "Home") %>
<h2>Timer</h2>

<div class="container text-center">
  <p id="counter"></p>
  <button id="start-button" type="button" class="btn btn-success">Start</button>
  <button id="stop-button" type="button" class="btn btn-danger">Stop</button>
  <button id="reset-button" type="button" class="btn btn-primary">Reset</button>
</div>

<h2>Time stored</h2>
<p> Free Time: <span id="free"></span></p>


<h2>Activity</h2>

<div class="container">
  <div class="row well">
    <div class="col-md-6">
        <h3 class="text-center"> Work </h3>

        <!-- Create all the work radio buttons --> 
        <% @description.each do |i| %>
          <% if i.is_work %>
            <%= radio_button_tag 'work-free', 'work' %> <%= i.description %>
          <% end %> 
        <% end %>
       
    </div>
    <div class="col-md-6">
        <h3 class="text-center"> Relax </h3>

         <!-- Create all the relax radio buttons -->
        <% @description.each do |i| %>
          <% if !i.is_work %>
            <%= radio_button_tag 'work-free', 'relax' %> <%= i.description %>
          <% end %> 
        <% end %>
    </div>
  </div>
  
