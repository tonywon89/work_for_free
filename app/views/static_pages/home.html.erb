<% provide(:title, "Home") %>
<h2>Timer</h2>

<div class="container text-center">
  <p id="counter"></p>
  <button id="start-button" type="button" class="btn btn-success">Start</button>
  <button id="stop-button" type="button" class="btn btn-danger">Stop</button>
  <button id="reset-button" type="button" class="btn btn-primary">Reset/Save
  </button>
</div>

<h2>Time stored</h2>
<p> Free Time: <span id="free"></span></p>


<h2>Activity</h2>

<div class="container">
  <div class="row well">
    <div class="col-md-6">
        <h3 class="text-center"> Work </h3>

        <!-- Create all the work radio buttons --> 
        <% if current_user %>
          <% id_num = 0 %>
          <% @workRelaxButtons.each do |i| %>
            <% if i.is_work %>
              <%= radio_button_tag 'work-free', 'work', true %> <%= i.description %>
              <% id_num += 1 %>
            <% end %> 
          <% end %>
        <% end %>
       
    </div>
    <div class="col-md-6">
        <h3 class="text-center"> Relax </h3>

         <!-- Create all the relax radio buttons -->
        <% if current_user %>
          <% id_num = 100 %>
          <% @workRelaxButtons.each do |i| %>
            <% if !i.is_work %>
              <%= radio_button_tag 'work-free', 'free' %> <%= i.description %>
              <% id_num += 1 %>
            <% end %> 
          <% end %>
        <% end %>
    </div>
  </div>
  
