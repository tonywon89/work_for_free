<% provide(:title, "Home") %>
<h2>Timer</h2>

<div class="container text-center">
  <p id="counter"></p>
  <button id="start-button" type="button" class="btn btn-success">Start</button>
  <button id="stop-button" type="button" class="btn btn-danger">Stop</button>
  <button id="reset-button" type="button" class="btn btn-primary">Reset</button>
</div>

<h2>Time stored</h2>
<p> Free Time: <span id="free"></span></p>


<h2>Activity</h2>

<div class="container">
  <div class="row well">
    <div class="col-md-6">
        <h3 class="text-center"> Work </h3>
        <input type="radio" class="work-radio" name="work-free" value="work" checked> Work
    </div>
    <div class="col-md-6">
        <h3 class="text-center"> Relax </h3>
        <input type="radio" class="relax-radio" name="work-free" value="relax"> Relax
    </div>
  </div>
  
