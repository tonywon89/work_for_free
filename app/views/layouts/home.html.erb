<% content_for(:header) do %>
  <link href="https://gitcdn.github.io/bootstrap-toggle/2.2.0/css/bootstrap-toggle.min.css" rel="stylesheet">
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
  <script src="https://gitcdn.github.io/bootstrap-toggle/2.2.0/js/bootstrap-toggle.min.js"></script>
<% end %>

<h2>Timer</h2>

<div class="container text-center">
  <p id="counter"></p>
  <button id="start-button" type="button" class="btn btn-success">Start</button>
  <button id="stop-button" type="button" class="btn btn-danger">Stop</button>
  <button id="reset-button" type="button" class="btn btn-primary">Reset</button>
</div>

<h2>Time stored</h2>
<p> Free Time: <span id="free"></span></p>


<h2>Buttons</h2>

<div class="container">
  <button class="btn btn-success" onclick="toggle()">
    Work 
  </button>
  <input id="work-toggle" data-toggle="toggle" checked type="checkbox">
  
</br>

  <button class="btn btn-warning" onclick="toggle()">
    Free 
  </button>
  <input id="free-toggle" data-toggle="toggle" type="checkbox">
  
</div>