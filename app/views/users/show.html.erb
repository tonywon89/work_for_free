<div class="container text-center">
  <p id="counter"></p>
  <button id="start-button" type="button" class="btn btn-success">Start</button>
  <button id="stop-button" type="button" class="btn btn-danger">Stop</button>
  <button id="reset-button" type="button" class="btn btn-primary">Reset/Save</button>
</div>
<hr/>

<h3>Free Time Stored:</h3>
<div><span id="free"></span> </div>

<hr/>

<div class="container">
  <div class="row well">
    <div class="col-md-6">
        <h3 class="text-center"> Work </h3>
        <div class="text-center"> 
          <!-- Create all the work radio buttons --> 
          <% if current_user %>
            <% @workRelaxButtons.each do |i| %>
              <% if i.is_work %>
                <p class="activity"><%= radio_button_tag 'work-free', 'work', true, class: i.description %> <%= i.description %></p>
              <% end %> 
            <% end %>
          <% end %>
        </div>
    </div>
    <div class="col-md-6 border-left">
        <h3 class="text-center"> Relax </h3>
        <div class="text-center">
           <!-- Create all the relax radio buttons -->
          <% if current_user %>
            <% @workRelaxButtons.each do |i| %>
              <% if !i.is_work %>
                <p class="activity"><%= radio_button_tag 'work-free', 'free', false, class: i.description %> <%= i.description %> </p>
              <% end %> 
            <% end %>
          <% end %>
        </div>
    </div>
  </div>
  
